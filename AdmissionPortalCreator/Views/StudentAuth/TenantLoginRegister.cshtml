@model AdmissionPortalCreator.ViewModels.StudentAccountViewModel
@{
    Layout = null;
    var isLogin = Model?.IsLoginMode ?? true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(isLogin ? "Student Login" : "Student Registration")</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background: #f5f7fa;
            font-family: "Poppins", sans-serif;
        }

        .auth-container {
            max-width: 420px;
            margin: 60px auto;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 40px;
        }

            .auth-container h3 {
                font-weight: 600;
                margin-bottom: 20px;
                text-align: center;
            }

            .auth-container .tenant-name {
                text-align: center;
                font-size: 18px;
                color: #555;
                margin-bottom: 25px;
            }

        .toggle-link {
            text-align: center;
            margin-top: 15px;
        }

            .toggle-link a {
                text-decoration: none;
                color: #007bff;
                font-weight: 500;
            }

        .alert {
            display: none;
        }
    </style>
</head>
<body>

    <div class="auth-container">
        <h3>@(isLogin ? "Student Login" : "Create Student Account")</h3>
        <div class="tenant-name">
            Welcome to <strong>@Model.TenantName</strong> Admission Portal
        </div>

        <div id="alertBox" class="alert" role="alert"></div>

        <form id="authForm">
            <input type="hidden" name="TenantId" value="@Model.TenantId" />
            <input type="hidden" name="FormCode" value="@Model.FormCode" />

            @if (!isLogin)
            {
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" class="form-control" name="FullName" required />
                </div>
            }

            <div class="mb-3">
                <label class="form-label">Email address</label>
                <input type="email" class="form-control" name="Email" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" name="Password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">
                @(isLogin ? "Login" : "Register")
            </button>
        </form>

        <div class="toggle-link">
            @if (isLogin)
            {
                <span>Don't have an account? <a href="/apply/@Model.TenantId/@Model.FormCode/register">Register here</a></span>
            }
            else
            {
                <span>Already have an account? <a href="/apply/@Model.TenantId/@Model.FormCode">Login here</a></span>
            }
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#authForm').on('submit', function (e) {
                e.preventDefault();

                const form = $(this);
                const data = form.serialize();
                const isLogin = @isLogin.ToString().ToLower();

                const url = isLogin ? '/StudentAuth/Login' : '/StudentAuth/Register';

                $.post(url, data, function (response) {
                    const alertBox = $('#alertBox');
                    if (response.success) {
                        alertBox
                            .removeClass('alert-danger')
                            .addClass('alert-success')
                            .text(response.message)
                            .fadeIn();

                        setTimeout(() => {
                            if (response.redirectUrl)
                                window.location.href = response.redirectUrl;
                        }, 1200);
                    } else {
                        alertBox
                            .removeClass('alert-success')
                            .addClass('alert-danger')
                            .text(response.message || 'Something went wrong.')
                            .fadeIn();
                    }
                });
            });
        });
    </script>

</body>
</html>
