@model AdmissionPortalCreator.Models.FormSubmission

@{
    ViewData["Title"] = "View Application";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="card mb-4 shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-1">Application Details</h3>
                            <small>Submission ID: #@Model.SubmissionId</small>
                        </div>
                        <span class="badge bg-success fs-6">Submitted</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-file-earmark-text"></i> Form:</strong>
                            <p class="mb-0">@Model.Form.Name</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-calendar-event"></i> Submitted On:</strong>
                            <p class="mb-0">@Model.SubmittedAt.ToString("MMMM dd, yyyy hh:mm tt")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-person-fill"></i> Applicant:</strong>
                            <p class="mb-0">@(Model.User.FullName ?? Model.User.UserName)</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="bi bi-envelope-fill"></i> Email:</strong>
                            <p class="mb-0">@Model.User.Email</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                        {
                            <div class="col-md-6 mb-3">
                                <strong><i class="bi bi-telephone-fill"></i> Phone:</strong>
                                <p class="mb-0">@Model.User.PhoneNumber</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Application Data -->
            @foreach (var sec in Model.Form.FormSections.OrderBy(s => s.OrderIndex))
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="bi bi-folder"></i> @sec.Title
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var field in sec.FormFields.OrderBy(f => f.OrderIndex))
                            {
                                var answer = Model.FormAnswers.FirstOrDefault(a => a.FieldId == field.FieldId);
                                
                                <div class="col-md-6 mb-3">
                                    <div class="border-start border-primary border-3 ps-3">
                                        <strong class="text-primary">@field.Label:</strong>
                                        <div class="mt-1">
                                            @if (field.FieldType.ToLower() == "file" && answer != null)
                                            {
                                                if (!string.IsNullOrEmpty(answer.FilePath))
                                                {
                                                    <a href="@answer.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-download"></i> Download: @answer.AnswerValue
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">No file uploaded</span>
                                                }
                                            }
                                            else if (answer != null && !string.IsNullOrEmpty(answer.AnswerValue))
                                            {
                                                <p class="mb-0">@answer.AnswerValue</p>
                                            }
                                            else
                                            {
                                                <span class="text-muted fst-italic">Not provided</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <a asp-action="Index" asp-route-formId="@Model.FormId" class="btn btn-secondary btn-lg px-5">
                        <i class="bi bi-arrow-left"></i> Back to Applicants
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                        <i class="bi bi-house"></i> Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>