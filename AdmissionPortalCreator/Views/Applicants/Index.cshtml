@model List<AdmissionPortalCreator.Models.FormSubmission>

@{
    ViewData["Title"] = "Applicants";
    var form = ViewBag.Form as AdmissionPortalCreator.Models.Form;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>
                        <i class="bi bi-people-fill"></i> Applicants for: @form.Name
                    </h2>
                    <p class="text-muted mb-0">
                        Total Submissions: <strong>@Model.Count</strong> |
                        Form Period: @form.StartDate.ToString("MMM dd, yyyy") - @form.EndDate.ToString("MMM dd, yyyy")
                    </p>
                </div>
                <div>
                    <a asp-action="ExportCSV" asp-route-formId="@form.FormId" class="btn btn-success">
                        <i class="bi bi-download"></i> Export CSV
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>

            @if (Model.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Submission ID</th>
                                        <th>Applicant Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Submitted On</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var submission in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">#@submission.SubmissionId</span>
                                            </td>
                                            <td>
                                                <strong>@(submission.User.FullName ?? submission.User.UserName)</strong>
                                            </td>
                                            <td>@submission.User.Email</td>
                                            <td>@(submission.User.PhoneNumber ?? "N/A")</td>
                                            <td>@submission.SubmittedAt.ToString("MMM dd, yyyy hh:mm tt")</td>
                                            <td>
                                                <a asp-action="ViewSubmission"
                                                   asp-route-submissionId="@submission.SubmissionId"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> View Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No applications received yet for this form.
                </div>
            }
        </div>
    </div>
</div>